<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ly_centent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/login_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="东方云谷·物联平台"
            android:textColor="@color/login_text"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_key_value">

            <TextView
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前版本:" />

            <TextView
                android:id="@+id/tv_b"
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="V" />
        </RelativeLayout>

        <View style="@style/main_tab_d_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_key_value">

            <TextView
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱地址:" />

            <com.qmuiteam.qmui.widget.textview.QMUILinkTextView
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="yaoxinzhineng@163.com" />
        </RelativeLayout>

        <View style="@style/main_tab_d_view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ll_key_value">

            <TextView
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="官网地址:" />

            <com.qmuiteam.qmui.widget.textview.QMUILinkTextView
                style="@style/me_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="https://www.dfygiot.com" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="@string/banquan"
        android:textColor="@color/ticket_time"
        android:textSize="12sp" />
</RelativeLayout>