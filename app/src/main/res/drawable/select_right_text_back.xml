<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/login_text" />
            <solid android:color="@color/white" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
            <padding android:bottom="2dp" android:left="12dp" android:right="12dp" android:top="2dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/login_text" />
            <solid android:color="@color/login_text" />
            <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
            <padding android:bottom="2dp" android:left="12dp" android:right="12dp" android:top="2dp" />
        </shape>
    </item>
</selector>